<form id="myGroupsForm" method="POST" action="~/MyGroups/submit">
    <div class="col-md-offset-4">
        <select id="groupInvites" name="groupInvites" class="form-control" multiple="multiple" style="margin-bottom:2px" value="">
            @foreach (var gi in (List<String>)ViewData["groupsInvitations"])
            {
                <option value="@gi">@gi</option>
            }
            @ViewBag.group=this.value
        </select>
        <button type="submit" id="submit" class="btn btn-primary btn-block" style="width: 280px;">Accept invitations</button>
    </div>
</form>
