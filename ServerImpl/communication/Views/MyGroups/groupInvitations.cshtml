@if (((List<String>)ViewData["groupsInvitations"]).Count != 0)
{
<form id="myGroupsForm" method="POST" action="~/MyGroups/submit">
    <h2 class="cen ">Groups invitations</h2>
    <div class="col-md-6">
        <select id="groupInvites" name="groupInvites" class="form-control" multiple="multiple" style="margin-bottom:2px; width:auto" value="">
            @foreach (var gi in (List<String>)ViewData["groupsInvitations"])
            {
                <option value="@gi">@gi</option>
            }
            @ViewBag.group=this.value
        </select>
        <span class="help-block"></span>
        <button type="submit" id="submit" name="submitButton" value="accept" class="btn btn-primary btn-block" style="width: 280px;">Accept invitations</button>
        <span class="help-block"></span>
        <button type="submit"  name="submitButton" value="decline" class="btn btn-primary btn-block" style="width: 280px;">Decline invitations</button>

    </div>
</form>
}
