
@{
    ViewBag.Title = "remove questions";
}

@model IEnumerable<communication.Models.Questions.QuestionData>



    <div>
        <form id="removeQuestionsform" method="POST" action="~/RemoveQuestions/submit">

            <h2>Select Questions to remove</h2>
            <br />
            @if (@ViewBag.message != null)
            {
                <script>
                alert("@ViewBag.message");
                </script>
            }
         
            <div class="container" id="links">
                @foreach (var question in Model)
                {
                    <input type="checkbox" id="QuestionData" name="QuestionData" class="form-control" value="@question.qID"> @question.qID

                    foreach (var pic in question.pics)
                    {
                        <img src="@pic" alt="Image not found" style="width:202px;height:164px;" />
                    }
                    <p>The diagnosis for this case is :</p>
                    foreach (var d in question.dignosis)
                    {
                        <p>@d</p><br />
                    }

                }
            </div>

            <script type="text/javascript">
                $('#QuestionData').tokenize();
            </script>



            <button type="submit" class="btn btn-primary btn-block" style="width: 280px;">Remove selected questions</button>
        </form>
    </div>
