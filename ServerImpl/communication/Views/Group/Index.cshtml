
@{
    ViewBag.Title = "Index";
}

<div class="cen ">
    @if (@ViewBag.message != null)
    {
        <script>
            alert("@ViewBag.message");
        </script>
    }


    @if ((List<Tuple<string, int>>)ViewBag.groups != null)
            {
        <br />
        if (((List<Tuple<string, int>>)ViewBag.groups).Count != 0)
        {
            <h2 class="cen col-md-offset-4">@ViewBag.group_name</h2>
        }
        <br />
        <div class="btn-toolbar col-md-offset-4" role="toolbar">
            @foreach (var g in (List<String>)ViewData["groups"])
                {

                <div class="container">
                    <button name="@g" +"_button" type="button" style="margin-bottom:6px" class="btn btn-primary" id="@g" onclick="location.href='@Url.Action("Index", "Group",new { groupName = g})'">@g</button>
                </div>
            }
        </div>
    }
    <br />
    @Html.Partial("groupInvitations");


</div>

