
@{
    ViewBag.Title = "Register";
}
<div class="cen col-md-offset-4">
    <h2>Registration</h2>
    
    <form id="registerForm" method="POST" action="/register/submit">
        <div class="form-group">
            <label for="email" class="control-label">Email</label>
            <input type="email" class="form-control" name="email" id="email" value="@ViewBag.email" required title="Please enter your email" placeholder="Email">
            <span class="help-block"></span>
        </div>
        <div class="form-group">
            <label for="fName" class="control-label">First name</label>
            <input type="text" class="form-control" name="fName" id="fName" placeholder="First name" value="@ViewBag.fname" required title="Please enter your first name">
            <span class="help-block"></span>
        </div>
        <div class="form-group">
            <label for="lName" class="control-label">Last name</label>
            <input type="text" class="form-control" name="lName" id="lName" placeholder="Last name" value="@ViewBag.lname" required title="Please enter your last name">
            <span class="help-block"></span>
        </div>
        <div class="form-group">
            <label for="password" class="control-label">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="password" value="" required title="Please enter your password">
            <span class="help-block"></span>
        </div>
        <div class="form-group">
            <label for="level" class="control-label">Level of medical training</label>
            <select id="level" name="level" class="form-control" value="">
                <option value="PreMedicalstudent">Pre-Medical student</option>
                <option value="Medicalstudent1styear">Medical student - 1st year</option>
                <option value="Medicalstudent2ndyear">Medical student - 2nd year</option>
                <option value="Medicalstudent3rdyear">Medical student - 3rd year</option>
                <option value="Medicalstudent4thyear">Medical student - 4th year +</option>
                <option value="ResidentPGY1">Resident PGY 1</option>
                <option value="ResidentPGY2">Resident PGY 2</option>
                <option value="ResidentPGY3">Resident PGY 3</option>
                <option value="ResidentPGY4">Resident PGY 4</option>
                <option value="ResidentPGY5">Resident PGY 5</option>
                <option value="ResidentPGY6">Resident PGY 6</option>
                <option value="ResidentPGY7">Resident PGY 7</option>
                <option value="Fellow">Fellow</option>
                <option value="Attending">Attending</option>
            </select>
        </div>
        <div id="loginErrorMsg" class="alert alert-error ">@ViewBag.errorMessage</div>
        <div class="checkbox hide">
            <label>
                <input type="checkbox" name="remember" id="remember"> Remember Me
            </label>
        </div>
        <button type="button" class="btn btn-primary btn-block" style="width: 280px;">Register</button>
    </form>
</div>