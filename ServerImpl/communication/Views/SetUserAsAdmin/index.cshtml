
@{
    ViewBag.Title = "Set User As Admin";
}
<meta id="meta" name="@ViewBag.Title" />
<div class="cen col-md-offset-4">
    <form id="addSubjectForm" method="POST" action="~/SetUserAsAdmin/submit">
        <div class="form-group">
            <br />
            <h2>Assign adminstrator</h2>
            <br />

            @if (@ViewBag.message != null)
            {
                <script>
                    alert("@ViewBag.message");
                </script>
            }

            <input type="email" class="form-control" name="userEmail" id="userEmail" placeholder="Type a user email address" value="@ViewBag.userEmail" required>

            <br />
            <button type="submit" id="submit" class="btn btn-primary btn-block" style="width: 280px;">Assign administrator</button>

        </div>
    </form>
</div>

