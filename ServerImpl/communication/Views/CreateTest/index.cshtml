
@{
    ViewBag.Title = "Create Test";
}

@model IEnumerable<communication.Models.GetTest.GetTestData>
<meta id="meta" name="@ViewBag.Title" />

<div class="cen col-md-offset-4">
    <form id="createTestForm" method="POST" action="~/CreateTest/submit">
        <div class="form-group">
            <br />
            <h2>Create a test</h2>
            <br />
            @if (@ViewBag.message != null)
            {
                <script>
                    alert("@ViewBag.message");
                </script>
            }
            <br/>
            <label for="subject" class="control-label">Subject</label>
            <select id="subject" name="subject" class="form-control" onchange="giveSelection(this.value)">
                @foreach (var subject in Model)
                {
                    <option value="@subject.key">@subject.key</option>
                }
            </select>
            <br />
            <label for="topics" class="control-label">Topics</label>
            <br/>
            <select id="topics" name="topics" class="form-control" multiple="multiple" onchange="onSubmitTopic()" value="">
                @foreach (var subject in Model)
                {
                    foreach (var topics in subject.vals)
                    {
                        <option data-option="@subject.key" value="@topics">@topics</option>
                    }
                }
                <!--ViewData["topic"] = onSubmitTopic()-->
            </select>
            
           <!-- <script type="text/javascript">
                $(function () {
                    $('#topic').multiselect({
                        includeSelectAllOption: true
                    });
                });
            </script>-->

            <br />

            <script type="text/javascript">
                var sel1 = document.querySelector('#subject');
                var sel2 = document.querySelector('#topics');
                var options2 = sel2.querySelectorAll('option');

                function giveSelection(selValue) {
                    sel2.innerHTML = '';
                    for (var i = 0; i < options2.length; i++) {
                        if (options2[i].dataset.option === selValue) {
                            sel2.appendChild(options2[i]);
                        }
                    }
                }
                giveSelection(sel1.value);
            </script>
           
             <script type="text/javascript">
                var select = document.querySelector('#topics');
                var optionsTopic = select.querySelectorAll('option');
                
                function onSubmitTopic() {
                    for (var i = optionsTopic.length; i--;) {
                        if (optionsTopic[i].selected) viweData["topics"].push(optionsTopic[i].value)
                    }
                }
            </script>

            <script type="text/javascript">
                $('#topics').tokenize();
            </script>



    <button type="submit" id="submit" class="btn btn-primary btn-block" style="width: 280px;">Next step</button>
</div>
</form>
</div>