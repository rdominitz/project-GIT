@{
    ViewBag.Title = "Manage group";
}

@model IEnumerable<communication.Models.Group.GroupData>
<meta id="meta" name="@ViewBag.Title" />

<div class="cen col-md-offset-4">
    <form id="manageGroupForm" method="POST">
        <div class="form-group">
            <br />
            <h2>Select a group</h2>
            <br />
            @if (@ViewData["message"] != null)
            {
                <script>
                    alert("@ViewData["message"]");
                </script>
            }
            <label for="groupName" class="control-label">Group Name</label>
            <select id="groupName" name="groupName" class="form-control">
                @foreach (var group in Model)
                {
                    <option value="@group.key">@group.key</option>
                }
                @ViewBag.groupName=this.value
            </select>

            <br />

            <button type="submit" value="saveChangeAndRedirectAddToExistGroup" formaction="~/ManageGroup/saveChangeAndRedirectAddToExistGroup" name="addToExistGroup" class="btn btn-primary btn-block" style="width: 280px;" id="test">Invite to group</button>          
            <button type="submit" value="saveChangeAndRedirectAddTestToGroup" formaction="~/ManageGroup/saveChangeAndRedirectAddTestToGroup" name="addTestToGroup" class="btn btn-primary btn-block" style="width: 280px;" id="test">Add test to group</button>
            <button type="submit" value="saveChangeAndViewGroupTests" formaction="~/ManageGroup/saveChangeAndRedirectViewGroupTests" name="viewGroupTests" class="btn btn-primary btn-block" style="width: 280px;" id="test">View group tests</button>
            <button type="submit" value="submit" formaction="~/ManageGroup/submit" id="submit" class="btn btn-primary btn-block" style="width: 280px;">Delete group</button>

         </div>
    </form>
</div>